{
  "compilerOptions": {
    "outDir": "lib",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "ESnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@ui": ["./ui"],
      "@ui/*": ["./ui/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@scss": ["./scss"],
      "@scss/*": ["./scss/*"],
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "src/**/*.stories.tsx"]
}
